<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#FBFBFC"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false" />

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textColor="#070761"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Completed: 0/5" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="226dp"
        android:layout_marginRight="226dp"
        android:layout_marginBottom="0dp"
        android:padding="10dp"
        android:text="Time"
        android:textColor="#06064D"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:background="#F5F5F5"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#04044E"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Question" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="272dp"
        android:layout_above="@id/countLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer1"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#E7BA77"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#001"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="Answer1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer2"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#E7BA77"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#001"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="answer2" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer3"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#E7BA77"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#001"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="answer3" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/answer4"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#E7BA77"
                android:onClick="checkAnswer"
                android:textAllCaps="false"
                android:textColor="#001"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="answer4" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>